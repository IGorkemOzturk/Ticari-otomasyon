@using MY_Ticari.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonelID</td>
            <td>@x.PersonelAd</td>
            <td>@x.PersonelSoyad</td>
            <td>

                <img src="@x.PersoelGorsel" style="width:60px; height:60px; border-radius:50px" />

            </td>
            <td>@x.Departman.DepartmanAd</td>
            <td><a href="/Personel/PersonelGetir/@x.PersonelID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-warning" style="color:white">Detaylar</a></td>

        </tr>
    }

</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>

